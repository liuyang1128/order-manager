    <update id="setDeleteStatus" >
        update category
        set delete_status = 0
        where id  = #{id}
    </update>

    <select id="selectAllIdAndName" parameterType="long" resultMap="IdAndNameMap">
        SELECT id,category_name FROM category where delete_status = 1 and store_id = #{storeId}
    </select>
    
