            <arg column="category_name" javaType="java.lang.String" jdbcType="VARCHAR"/>
            <arg column="remarks" javaType="java.lang.String" jdbcType="VARCHAR"/>
            <arg column="operator" javaType="java.lang.Long" jdbcType="BIGINT"/>
